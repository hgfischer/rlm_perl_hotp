# -*- text -*-
server 2factor {

	authorize {
		preprocess
		auth_log
		suffix
		pap
		perl

		if (User-Password =~ /^(.+?)([0-9]{6})$/) {
			update request {
				User-Password := "%{1}"
				One-Time-Password := "%{2}"
			}
		}

		update control {
			Auth-Type := TwoFactor
		}

		if (ldap_vh-LDAP-Group == "allowed-group-a") {
			noop
		}
		elsif (ldap_vh-LDAP-Group == "allowed-group-b") {
			noop
		}
		else {
			reject
		}
	}

	authenticate {
		Auth-Type TwoFactor {
			perl 
			ldap_vh
		}

		perl
		ldap_vh
	}

	preacct {
		preprocess
		acct_unique
		suffix
		perl
	}

	accounting {
		detail
		unix
		radutmp
		perl 
		attr_filter.accounting_response
	}

	session {
		radutmp
		perl
	}

	post-auth {
		reply_log
		ldap_vh
		perl
		exec

		Post-Auth-Type REJECT {
			attr_filter.access_reject
		}
	}

	pre-proxy {
		perl
	}

	post-proxy {
		perl
	}
}
